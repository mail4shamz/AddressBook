<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_5dp"
    card_view:cardCornerRadius="@dimen/padding_10dp">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/padding_5dp"
            android:weightSum="10">

            <TextView
                android:id="@+id/tvContactsId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvLastName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_5dp"
                android:layout_weight="3.5"
                android:gravity="center"
                android:text="@string/contact_entries_ast_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/contactEntriesTextColor"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tvFirstName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_5dp"
                android:layout_marginLeft="@dimen/padding_15dp"
                android:layout_weight="3.5"
                android:gravity="center"
                android:text="@string/contact_entries_first_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/contactEntriesTextColor"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:gravity="right"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/switch_set_flash_text"
                    android:checked="true"
                    android:textAlignment="center"
                    android:textStyle="bold|italic" />

            </LinearLayout>

        </TableRow>
    </TableLayout>
</android.support.v7.widget.CardView>